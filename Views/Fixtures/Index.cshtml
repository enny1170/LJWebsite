@model IEnumerable<LJWebsite.Models.Entities.Fixture>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create"><span class="glyphicon glyphicon-plus"></span> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vendor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManualUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxChannels)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManualUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxChannels)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@item.ID"><span class="glyphicon glyphicon-pencil">&nbsp;</a> |
                <a asp-action="Details" asp-route-id="@item.ID">&nbsp;<span class="glyphicon glyphicon-eye-open">&nbsp;</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">&nbsp;<span class="glyphicon glyphicon-remove"></a>
            </td>
        </tr>
}
    </tbody>
</table>
