@model IEnumerable<LJWebsite.Models.Entities.ColorKey>

@{
    ViewData["Title"] = "Color Keys";
}

<h2>Color Keys</h2>

<p>
    <a asp-action="Create"><span class="glyphicon glyphicon-plus"></span> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ColorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ColorName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ColorID"><span class="glyphicon glyphicon-pencil">&nbsp;</span></a> |
                <a asp-action="Details" asp-route-id="@item.ColorID">&nbsp;<span class="glyphicon glyphicon-eye-open">&nbsp;</span></a> |
                <a asp-action="Delete" asp-route-id="@item.ColorID">&nbsp;<span class="glyphicon glyphicon-remove"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
